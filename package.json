{
  "name": "devops-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --silent | grep 'All files' | awk '{lines=$10; gsub(/%/, \"\", lines); if(lines >= 90) print \"✅ Lines: \" $10 \" (90%超え達成!)\"; else print \"❌ Lines: \" $10 \" (90%未満)\"}'",
    "test:coverage:threshold": "./scripts/check-coverage-threshold.sh",
    "test:coverage:quiet": "jest --coverage --silent --passWithNoTests",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "lucide-react": "^0.525.0",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-jest": "^30.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  }
}
